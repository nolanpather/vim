set nocompatible
syntax on
filetype plugin indent on

set number relativenumber

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set laststatus=2

set noshowmode
set showcmd

set matchpairs+=<:>

set list
set listchars=tab:›\ ,trail:•,extends:#,nbsp:.

inoremap jk <esc>

" Plugin Configuration
" --------------------

" gruvbox - dark theme
colorscheme gruvbox 
set background=dark
